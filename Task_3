// Question: Write a program to create a pyramid pattern using C/C++
// Answer:

#include <iostream>
using namespace std;

int main() {
    int rows = 5; // you can change the number of rows
    for (int i = 1; i <= rows; i++) {
        for (int j = 1; j <= (2 * i - 1); j++) {
            cout << "*";
        }
        cout << endl;
    }
    return 0;
}
